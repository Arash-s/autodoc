{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es2020",
    "module": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true
  }
}